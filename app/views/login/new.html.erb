<% if logged_in? %>
<h1><%= debug current_user.inspect %></h1>
<h1>Logged In: <%= debug logged_in? %></h1>
<%= link_to  "Sair", logout_path, method: :delete %>
<% end %>

<div class="row justify-content-md-center">
    <div class="col col-lg-6">

<div class="card">
    <div class="card-header">Sing Up</div>
    <div class="card-body">

    <% if flash[:error] %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>

    <%= form_for(:login, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.text_field(:email, class: "form-control") %>
        </div>

        <div class="form-group">
            <%= f.password_field(:password, class: "form-control") %>
        </div>
        
        <%= f.submit "Sign up now!", class: "btn btn-block btn-primary" %>
    <% end %>
    </div>
</div>

</div>
</div>